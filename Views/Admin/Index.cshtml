                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Đã bán</th>
                                <th>Doanh thu</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Smartphone XYZ Pro</td>
                                <td>42</td>
                                <td><span class="price">42,000,000₫</span></td>
                            </tr>
                            <tr>
                                <td>Laptop Gaming ABC</td>
