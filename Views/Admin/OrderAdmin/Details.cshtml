@model AppMVC.Models.Order

<h2>Chi tiết đơn hàng #@Model.Id</h2>

<p><strong>Trạng thái:</strong> @Model.Id</p>
<p><strong>Người đặt:</strong> @Model.User?.Name</p>
<p><strong>Ngày đặt:</strong> @Model.OverDateTime.ToString("dd/MM/yyyy")</p>
<p><strong>Tổng tiền:</strong> @Model.OrderDetails.Sum(x => x.Quantity * x.UnitPrice)</p>


<h3>Sản phẩm trong đơn</h3>

<table class="table">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Số lượng</th>
            <th>Giá</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>@item.Product?.Name</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice.ToString("N0") ₫</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Quay lại</a>
